      <li class="next">
        <%= link_to ">", history_tdl_path(year: @date.next_month.year, month: @date.next_month.month) %>
      </li>
    </ul>
    <%= render partial: 'calendar' %>
  </div>
  <div class="col-lg-6">
    <%= render partial: 'calendar_index' %>
  </div>
</div>
